generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  ADMIN
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  phone    String
  role     UserRole @default(CLIENT)

  appointments Appointment[]

  @@map("users")
}

model Appointment {
  id   String @id @default(uuid())
  User User?  @relation(fields: [clientId], references: [id])

  clientId String
  date     DateTime

  servicesIds String[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("appointments")
}

model Service {
  id          String   @id @default(uuid())
  stripeId    String   @unique
  name        String   @unique
  description String
  slug        String
  category    String
  price       Int
  duration    Int
  imgUrl      String[] @map("img_url")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("services")
}
