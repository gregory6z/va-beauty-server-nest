generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  ADMIN
}

model Appointment {
  id String @id @default(uuid())

  clientId String
  date     DateTime

  isSubscription Boolean @default(false) @map("is_subscription")

  servicesIds String[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("appointments")
}

model User {
  id String @id @default(uuid())

  name      String
  email     String  @unique
  password  String
  telephone String?

  customerId String? @map("customer_id")

  appointments Appointment[]

  @@map("users")
}

model Service {
  id          String @id @default(uuid())
  stripeId    String @unique
  name        String @unique
  description String
  slug        String
  category    String

  isSubscription Boolean? @default(false) @map("is_subscription")
  sessions       Int?
  interval       Int?

  price    Int
  duration Int
  imgUrl   String[] @map("img_url")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("services")
}
